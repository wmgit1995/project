
{include file="public/header"}
{include file="public/page"}
<body>
<div class="x-nav">

    <a class="layui-btn layui-btn-small" style="line-height:1.6em;margin-top:3px;float:right"  href="javascript:location.replace(location.href);" title="刷新"><i class="layui-icon" style="line-height:30px">ဂ</i></a>
</div>
<div class="x-body">
    <form class="layui-form x-center" action="credit_seed.html" style="width:800px" id="form2" method="get">
        <div class="layui-form-pane" style="margin-top: 15px;">
            <div class="layui-form-item">
                <div class="layui-input-inline" style="text-align:right;padding-left:63%">
                    <input type="text" name="title" id="name" placeholder="请输入用户名称" autocomplete="off" class="layui-input" value="{$title}">
                </div>
                <div class="layui-input-inline" style="width:80px">
                    <button class="layui-btn"  id="search" lay-submit="" lay-filter="sreach"><i class="layui-icon" >&#xe615;</i></button>
                </div>
            </div>
        </div>
    </form>
    <xblock>

        <button class="layui-btn" onclick="credit_seed_add('赠送信用种子','credit_seed_add.html','600','500')"> <i class="layui-icon">&#xe608;</i>赠送信用种子</button>

    </xblock>


    <table class="layui-table">
        <thead>
        <tr>

            <th>
                ID
            </th>

            <th>
                用户id
            </th>
            <th>
                用户昵称
            </th>
            <th>
                数量
            </th>
            <th>
                变更后数量
            </th>
            <th>
                时间
            </th>
        </tr>
        </thead>
        <tbody>
        {foreach $lists as $k=>$vo}
        <tr>

            <td>
                {$vo['id']}
            </td>
            <td>
                {$vo['user_id']}
            </td>
            <td>
                {$vo['user_nickname']}
            </td>
            <td>{eq name="vo.vector" value="1"}+{else/}-{/eq}{$vo['num']}</td>
            <td>{$vo['nownum']}</td>
            <td>{$vo['add_time']|date="Y-m-d H:i",###}</td>

        </tr>
        {/foreach}
        </tbody>
    </table>
    <div id="page" style="display:none"></div>
    <div style="text-align:center;">{$lists->render()}</div>
</div>


{include file="public/footercom"}
<script>

    /*-添加*/
    function credit_seed_add(title,url,w,h){
        x_admin_show(title,url,w,h);
    }

</script>

</body>
</html>
